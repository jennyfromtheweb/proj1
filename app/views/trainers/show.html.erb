<h3>Trainer</h3>
<p>Name: <%= @trainer.name if @trainer.name %></p>
<p>Email: <%= @trainer.email if @trainer.email %></p> 
<div class="container">
  <div class="row">
    <h3>Pokemon</h3>
    <div class="column">
      <table class="table">
        <tbody>
          <% Pokemon.all.each do |p| %>
            <tr>            
                <% if p.trainer_id == @trainer.id %>
                    <td> <%= p.name %> </td>
                    <td> <%= p.level %> </td>
                    <td> <%= p.health %> </td>
                    <td>
                    <%= button_to "Damage!", damage_path(id: p), :class => "button small", :method => :patch %>
                    </td>
                <% end %>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>
